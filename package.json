{
  "name": "nftlicense",
  "version": "1.0.0",
  "description": "Software licensing using NFTs",
  "main": "dist/NFTLicense.js",
  "typings": "dist/NFTLicense.d.ts",
  "module": "dist/NFTLicense.js",
  "repository": "https://github.com/vantezzen/nftlicense",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "webpack --mode production",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "watch": "webpack --watch --mode development",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset-hard version",
    "example": "node example/server.js"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "assert": "^2.0.0",
    "babel-loader": "^8.2.3",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "express": "^4.17.2",
    "gh-pages": "^3.1.0",
    "https-browserify": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "os-browserify": "^0.3.0",
    "prettier": "^2.1.1",
    "process": "^0.11.10",
    "socket.io": "^4.4.1",
    "standard-version": "^9.0.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.0.2",
    "url": "^0.11.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    },
    "files": [
      "!build/module/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  },
  "dependencies": {
    "axios": "^0.25.0",
    "clean-webpack-plugin": "^4.0.0",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.1.4",
    "node-fetch": "^3.2.0",
    "uuid": "^8.3.2",
    "web3": "~1.6",
    "webpack-node-externals": "^3.0.0"
  }
}
