{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "pretty": true,
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
